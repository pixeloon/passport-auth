doctype html
html
  head
    meta(charset='utf-8')
    title Programming Bytes Homepage
    link(rel='stylesheet', href='/stylesheets/css/bootstrap.css')
  body
    nav.navbar.navbar-inverse
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') Programming Bytes
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            li(class=(title === 'Home' ? 'active' : ''))
              a(href='/') Home
            li(class=(title === 'About' ? 'active' : ''))
              a(href='/about') About
            li(class=(title === 'Contact' ? 'active' : ''))
              a(href='/contact') Contact
          ul.nav.navbar-nav.navbar-right
            li(class=(title === 'Register' ? 'active' : ''))
              if (currentUser)
                a(href='/auth/logout') Logout
              else 
                a(href='/auth/register') Register
                li(class=(title === 'Login' ? 'active' : ''))
                  a(href='/auth/login') Sign In
    block content

  