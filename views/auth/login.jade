extends ../layout

block content
  .container
    h3 Sign in
    form.form-horizontal(action='/auth/login' method='POST')
      .form-group
        label.col-sm-2.control-label(for='inputEmail3') Email
        .col-sm-10
          input#inputEmail.form-control(type='email', placeholder='Enter Email' autofocus)
      .form-group
        label.col-sm-2.control-label(for='inputPassword3') Password
        .col-sm-10
          input#inputPassword.form-control(type='password', placeholder='Enter Password')
      .form-group
        .col-sm-offset-2.col-sm-10
          input.btn.btn-default(type='submit' name='submit' value='Sign In') 

